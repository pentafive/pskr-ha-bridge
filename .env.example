# PSKReporter HA Bridge Configuration
# Copy this file to .env and update with your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Your amateur radio callsign (REQUIRED)
MY_CALLSIGN=YOUR_CALLSIGN

# Home Assistant MQTT broker IP address or hostname (REQUIRED)
HA_MQTT_BROKER=homeassistant.local

# =============================================================================
# MQTT AUTHENTICATION (Optional)
# =============================================================================

# Leave empty if your MQTT broker doesn't require authentication
HA_MQTT_USER=
HA_MQTT_PASS=

# MQTT broker port (default: 1883)
HA_MQTT_PORT=1883

# =============================================================================
# SCRIPT OPERATION
# =============================================================================

# Monitoring direction: rx, tx, or dual (default: rx)
# rx   = Monitor spots RECEIVED by your callsign (who heard you)
# tx   = Monitor spots TRANSMITTED by your callsign (who you heard)
# dual = Monitor both directions (creates separate RX/TX devices)
SCRIPT_DIRECTION=rx

# Enable verbose debug logging (default: False)
DEBUG_MODE=False

# =============================================================================
# SPOT SENSORS
# =============================================================================

# Enable individual spot sensors (default: True)
# Set to False to only get statistics sensors
ENABLE_SPOT_SENSORS=True

# Minimum distance filter in km (default: 0 = disabled)
# Set to e.g. 1000 to only show spots from >1000km away
SPOT_FILTER_MIN_DISTANCE_KM=0

# Callsign filters (comma-separated, leave empty to allow all)
# ALLOW: Only show spots involving these callsigns
# FILTERED: Never show spots involving these callsigns
SPOT_ALLOW_CALLSIGNS=
SPOT_FILTERED_CALLSIGNS=

# Country filters using ADIF codes (comma-separated)
# Find codes at: https://www.country-files.com/category/adif-country-files/
SPOT_ALLOW_COUNTRIES=
SPOT_FILTERED_COUNTRIES=

# =============================================================================
# STATISTICS TIMING
# =============================================================================

# Time window for statistics calculation in seconds (default: 900 = 15 minutes)
STATS_INTERVAL_WINDOW_SECONDS=900

# How often to publish statistics updates in seconds (default: 300 = 5 minutes)
STATS_UPDATE_INTERVAL_SECONDS=300

# =============================================================================
# ADVANCED CONFIGURATION (Rarely need to change)
# =============================================================================

# PSKReporter MQTT broker
PSK_BROKER=mqtt.pskreporter.info

# PSKReporter transport mode: MQTT, MQTT_TLS, MQTT_WS, MQTT_WS_TLS
PSK_TRANSPORT_MODE=MQTT_WS_TLS

# Skip TLS certificate verification (NOT recommended)
PSK_TLS_INSECURE=False

# PSKReporter mode filter (+ = all modes)
MODES_FILTER=+

# Home Assistant discovery prefix
HA_DISCOVERY_PREFIX=homeassistant

# Entity ID base prefix
HA_ENTITY_BASE=pskr
